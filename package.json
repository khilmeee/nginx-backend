{
  "name": "nginx-backend",
  "version": "1.0.0",
  "description": "nginx api backend",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "build:dev": "npm run clean && tsc -w",
    "start": "node .",
    "start:dev": "nodemon .",
