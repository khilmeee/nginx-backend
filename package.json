  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.21",
    "concurrently": "^6.2.1",
    "nodemon": "^2.0.12",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1"
  }
}
